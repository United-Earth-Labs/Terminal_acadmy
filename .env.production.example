# Production Environment Variables
# Copy this to .env.production and fill in real values

# Django
DEBUG=False
SECRET_KEY=your-very-secure-secret-key-change-this
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database
POSTGRES_PASSWORD=your-very-secure-database-password

# Redis (uses internal docker network)
REDIS_URL=redis://redis:6379/0

# Email (use real SMTP in production)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.yourmailprovider.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@yourdomain.com
EMAIL_HOST_PASSWORD=your-email-password

# Security
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Sentry (optional - for error tracking)
SENTRY_DSN=https://your-sentry-dsn

# Admin URL (change for security)
ADMIN_URL=supersecretadmin/
